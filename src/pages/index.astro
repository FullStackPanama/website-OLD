---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@/components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@/components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@/components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@/components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@/components/sections/features/FeaturesNavs.astro";
import PricingSection from "@/components/sections/pricing/PricingSection.astro";
import FAQ from "@/components/sections/FAQ.astro";
import AnnouncementBanner from "@/components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@/images/icon-maskable.png";
import faqs from "@/data_files/faqs.json";
import features from "@/data_files/features.json";
import pricing from "@/data_files/pricing.json";
import featureImage from "@/images/features-image.avif";
import construction from "@/images/construction-image.avif";
import tools from "@/images/automated-tools.avif";
import dashboard from "@/images/dashboard-image.avif";
import imgAccess from "@/images/access.jpg";
import imgCollab from "@/images/collab.jpg";
import imgMentor from "@/images/mentor.jpg";
import imgWorkshop from "@/images/workshop.jpg";
import GithubBtn from "@/components/ui/buttons/GithubBtn.astro";
import TestimonialsAndMembersSection from "@/components/sections/landing/TestimonialsAndMembersSection.astro";
import MemberFlags from "@/components/MemberFlags.astro";

const avatarSrcs: Array<string> = [
  // Reemplazar con URLs de imágenes de miembros reales de Full Stack Panamá si es posible
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Únete Ahora"
    url="/docs/guias/primeros-pasos"
    title="¡Full Stack Panamá está creciendo! Ya somos más de 250 miembros. Sé parte de nuestra comunidad y ayúdanos a impulsar el desarrollo de software en Panamá."
  >
    <MemberFlags showText class="text-white dark:text-black"/>
  </AnnouncementBanner>

  <HeroSection
    title=`Juntos, <span class="text-blue-500 dark:text-blue-400">Codificamos</span> el Futuro de Panamá`
    subTitle="Somos una vibrante comunidad de desarrolladores panameños unidos para impulsar la innovación tecnológica en nuestro país. Únete a nosotros para aprender, colaborar y crecer profesionalmente."
    primaryBtn="Únete a Nosotros"
    primaryBtnURL="/docs/guias/primeros-pasos"
    secondaryBtn="Conoce a Nuestros Miembros"
    secondaryBtnURL="/miembros"
    withReview={false}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`Basado en más de <span class="font-bold">250</span> miembros satisfechos`
    src={heroImage}
    alt="Grupo de desarrolladores de Full Stack Panamá colaborando en un proyecto"
  />

  <!--
  <ClientsSection
    title="Trusted by Industry Leaders"
    subTitle="Experience the reliability chosen by industry giants."
  />
  -->

  <FeaturesGeneral
    id="sobre-nosotros"
    title="Sobre Nosotros"
    subTitle="Full Stack Panamá es una comunidad dinámica de desarrolladores comprometidos con el crecimiento del sector tecnológico en Panamá, ofreciendo apoyo, recursos y oportunidades de networking."
    features={features}
  />

  <FeaturesNavs
    title=`Descubre cómo <span class="text-blue-500 dark:text-blue-400">Full Stack Panamá</span> impulsa el desarrollo tecnológico`;
    tabs={[
      {
        heading: "Red de Soporte",
        content: "Accede a una comunidad de más de 250 desarrolladores listos para compartir conocimientos, resolver dudas y apoyarte en tu crecimiento profesional.",
        svg: "tools",
        src: imgAccess,
        alt: "Ícono representando una red de conexiones entre desarrolladores",
        first: true,
      },
      {
        heading: "Desarrollo Colaborativo",
        content: "Participa en proyectos reales, mejora tus habilidades y contribuye al crecimiento tecnológico de Panamá trabajando en equipo.",
        svg: "dashboard",
        src: imgCollab,
        alt: "Manos trabajando juntas, simbolizando la colaboración",
        second: true,
      },
      {
        heading: "Mentoría y Networking",
        content: "Conecta con desarrolladores experimentados, encuentra mentores y amplía tu red profesional dentro de la industria tecnológica panameña.",
        svg: "house",
        src: imgMentor,
        alt: "Diagrama representando conexiones entre mentores y aprendices",
      },
      {
        heading: "Eventos y Talleres",
        content:
          "Participa en workshops, meetups y conferencias para mantenerte actualizado con las últimas tendencias y tecnologías en el desarrollo de software.",
        svg: "house",
        src: imgWorkshop,
        alt: "Imagen representando un taller o evento educativo",
      },
    ]}
  />

  <TestimonialsAndMembersSection />

  <!--
  <PricingSection pricing={pricing} />
  -->

  <FAQ
    id="faq"
    title="¿Tienes preguntas?"
    faqs={faqs}
  />

  <HeroSectionAlt
    title="Construyamos Juntos el Futuro Tecnológico de Panamá"
    subTitle="¿Eres un desarrollador apasionado por la tecnología y el crecimiento de Panamá? Únete a nosotros y sé parte de una red que está marcando la diferencia en nuestro país."
  >
    <GithubBtn
      url="https://github.com/fullstackpanama"
      title="Visítanos en GitHub"
    />
  </HeroSectionAlt>
</MainLayout>
