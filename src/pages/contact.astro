---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contacto | ${SITE.title}`;
---

<!--Utilizando MainLayout para el diseño exterior de la página y definiendo meta para SEO-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://fullstackpanama.pages.dev/contacto",
    "url": "https://fullstackpanama.pages.dev/contacto",
    "name": "Contáctanos | Full Stack Panamá",
    "description":
      "¿Tienes preguntas o quieres unirte a nuestra comunidad? Contáctanos y sé parte del futuro tecnológico de Panamá.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://fullstackpanama.pages.dev",
      "name": "Full Stack Panamá",
      "description":
        "Full Stack Panamá es una comunidad de desarrolladores comprometidos con el crecimiento tecnológico de Panamá.",
    },
    "inLanguage": "es-PA"
  }}
>
  <ContactSection />
</MainLayout>
