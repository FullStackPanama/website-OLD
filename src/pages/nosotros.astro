---
// Import the necessary components
import MainLayout from "../layouts/MainLayout.astro";
import FeaturesGeneral from "../components/sections/features/FeaturesGeneral.astro";
import features from "../data_files/features.json";
import PrimaryCTA from "@/components/ui/buttons/PrimaryCTA.astro";
---
<!--Utilizando MainLayout para el diseño exterior de la página y definiendo meta para SEO-->
<MainLayout title="Sobre Nosotros | Full Stack Panamá">
  <FeaturesGeneral
    id="nosotros"
    title="Sobre Nosotros"
    subTitle="Full Stack Panamá es una comunidad vibrante de desarrolladores unidos para impulsar la innovación tecnológica en nuestro país. Juntos, estamos construyendo el futuro digital de Panamá."
    features={features}
  />

  <PrimaryCTA
    title="Conoce a Nuestros Miembros"
    url="/miembros"
  />
</MainLayout>
