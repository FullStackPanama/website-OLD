---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Meetups y Conferencias",
    subTitle:
      "Organizamos reuniones regulares donde los desarrolladores pueden compartir conocimientos, discutir las últimas tendencias tecnológicas y establecer conexiones valiosas dentro de la comunidad tech de Panamá.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Grupo de desarrolladores en un meetup de Full Stack Panamá",
    imgTwo: personWorking,
    imgTwoAlt: "Desarrolladores haciendo networking en un evento de Full Stack Panamá",
  },
  {
    isRightSection: false,
    title: "Talleres y Capacitaciones",
    subTitle:
      "Ofrecemos workshops prácticos y sesiones de capacitación en diversas tecnologías y habilidades de desarrollo, ayudando a nuestros miembros a mantenerse actualizados y mejorar sus competencias profesionales.",
    img: beforeAfter,
    imgAlt: "Taller práctico de desarrollo web en Full Stack Panamá",
    btnExists: true,
    btnTitle: "Ver Próximos Talleres",
    btnURL: "/eventos",
  },
  {
    isRightSection: true,
    title: "Programa de Mentoría",
    subTitle:
      "Conectamos desarrolladores experimentados con aquellos que están comenzando su carrera, fomentando el crecimiento profesional y el intercambio de conocimientos dentro de nuestra comunidad.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Sesión de mentoría entre desarrolladores de Full Stack Panamá",
    imgTwo: aerialView,
    imgTwoAlt: "Colaboración en proyectos de desarrollo en Full Stack Panamá",
  },
  {
    isRightSection: false,
    title: "Proyectos Colaborativos",
    subTitle:
      "Facilitamos la colaboración en proyectos reales, permitiendo a nuestros miembros aplicar sus habilidades, trabajar en equipo y construir un portafolio sólido mientras contribuyen al ecosistema tech de Panamá.",
    img: usingTools,
    imgAlt: "Equipo de desarrolladores trabajando en un proyecto colaborativo",
  },
  {
    isRightSection: true,
    title: "Bolsa de Empleo y Oportunidades",
    subTitle:
      "Conectamos a nuestros miembros con oportunidades laborales en el sector tech de Panamá, y ayudamos a las empresas locales a encontrar talento calificado para sus proyectos de desarrollo.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Feria de empleo tech organizada por Full Stack Panamá",
    imgTwo: underConstruction,
    imgTwoAlt: "Sesión de preparación para entrevistas técnicas",
    btnExists: true,
    btnTitle: "Ver Oportunidades",
    btnURL: "/empleos",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://fullstackpanama.pages.dev/servicios",
    "url": "https://fullstackpanama.pages.dev/servicios",
    "name": "Servicios y Actividades | Full Stack Panamá",
    "description": "Descubre los servicios y actividades que Full Stack Panamá ofrece para impulsar el desarrollo profesional y la innovación tecnológica en Panamá.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://fullstackpanama.pages.dev",
        "name": "Full Stack Panamá",
        "description": "Comunidad de desarrolladores comprometidos con el crecimiento tecnológico de Panamá."
    },
    "inLanguage": "es-PA"
  }}
>
  <MainSection
    title="Impulsando el Desarrollo Tecnológico en Panamá"
    subTitle="En Full Stack Panamá, nos dedicamos a fomentar el crecimiento profesional y la innovación en la comunidad de desarrolladores de Panamá. Descubre cómo nuestros servicios y actividades pueden ayudarte a alcanzar tus metas en el mundo tech."
    btnExists={true}
    btnTitle="Únete a Nuestra Comunidad"
    btnURL="/docs/guias/primeros-pasos"
  />
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Nuestro Impacto en Números"
    subTitle="Full Stack Panamá está comprometido con el crecimiento y desarrollo de la comunidad tech en Panamá. Estos números reflejan nuestro impacto y el valor que aportamos a nuestros miembros y al ecosistema tecnológico del país."
    mainStatTitle="250+"
    mainStatSubTitle="miembros activos en nuestra comunidad"
    stats={[
      {
        stat: "50+",
        description: "eventos y talleres organizados",
      },
      {
        stat: "100+",
        description: "conexiones laborales facilitadas",
      },
      {
        stat: "30+",
        description: "proyectos colaborativos completados",
      },
    ]}
  />
</MainLayout>
